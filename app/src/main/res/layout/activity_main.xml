<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.musicalstructureapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabLayoutBackground"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="8dp"

            app:tabIndicatorColor="@color/tabLayoutSelected"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/tabLayoutSelected"
            app:tabTextColor="@color/songNamePlayNow" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/backgroundPlayNow"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:id="@+id/song_image"
                android:src="@drawable/song_image" />

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/songNamePlayNow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/songNamePlayNow"
                    android:textColor="@color/songNamePlayNow"
                    android:textSize="15sp" />

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:id="@+id/prev_song"
                    android:src="@drawable/prev_song" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/playPause"
                    android:src="@drawable/play" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/next_song"
                    android:src="@drawable/next_song" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
